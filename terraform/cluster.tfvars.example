  { name = "talos-cp1", role = "controlplane", host_key = "host1", ip = "192.168.1.201", memory = 8192, cpus = 2, disk_gb = 40, extensions = ["iscsi-tools", "util-linux-tools"] },
  { name = "talos-wk1", role = "worker", host_key = "host1", ip = "192.168.1.202", cpus = 2, disk_gb = 40, extensions = ["iscsi-tools", "util-linux-tools"] },
  { name = "talos-wk2", role = "worker", host_key = "host1", ip = "192.168.1.203", cpus = 2, disk_gb = 40, extensions = ["iscsi-tools", "util-linux-tools"] }
]

# Shared cluster settings
talos_vip = "192.168.1.200"
