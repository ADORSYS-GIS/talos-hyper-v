  "host1" = {
    host            = "100.116.65.14"
    user            = ""
    password        = ""
    port            = 5985
    https           = false
    insecure        = true
    use_ntlm        = true # Updated to match default in variable.tf
    cert_thumbprint = ""   # Added to match variable.tf
